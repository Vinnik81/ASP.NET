@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Cinema>


<div class="text-center">
    <h1 class="display-4">Movie</h1>
    <form method="get" action="/Home/Search" class="input-group mb-3">
        <input name="title" type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's title" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </form>
    @if (Model.Count() > 0)
    {
        <h1>Recent movies</h1><hr />
    }

</div>
<div class="row">
    @foreach (var item in @Model)
    {
        <div class="col-3">
            <partial name="_MovieCardPartial" model="@item"></partial>
        </div>
    }
</div>

<partial name="_ModalWindowPartial"></partial>
